# GitHub Configuration
GITHUB_TOKEN=your_github_token_here
GITHUB_USERNAME=your_username

# LLM Configuration - Free APIs
OPENROUTER_API_KEY=your_openrouter_api_key
NIM_API_KEY=your_nim_api_key  # Optional, if needed
GOOGLE_API_KEY=your_google_api_key
LLM_PROVIDER=openrouter  # openrouter, nim, or google
LLM_MODEL=togethercomputer/CodeLlama-34b-Instruct  # Default OpenRouter model
NIM_MODEL=microsoft/phi-4-mini-instruct  # Default NVIDIA model
GOOGLE_MODEL=gemini-2.0-flash  # Default Google model

# App Configuration
MAX_COMMITS_PER_DAY=30
MIN_COMMITS_PER_DAY=20
REPO_BASE_PATH=./repos
LOG_LEVEL=INFO
MAX_TOKENS=7000
TEMPERATURE=0.7

# Rate Limiting
REQUESTS_PER_MINUTE=10
MAX_RETRIES=3
TIMEOUT_SECONDS=30

# Randomization
MIN_TIME_BETWEEN_COMMITS=900
MAX_TIME_BETWEEN_COMMITS=7200